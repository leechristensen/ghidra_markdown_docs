{
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.egg-info": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/.tox": true,
        "**/.nox": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true,
        ".venv": true,
        "venv": true,
        "dist": true,
        "build": true
    },
    "search.exclude": {
        "**/__pycache__": true,
        "**/*.egg-info": true,
        ".venv": true,
        "venv": true,
        "uv.lock": true
    },
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
        }
    }
}
